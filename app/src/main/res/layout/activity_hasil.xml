<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Toko Roti"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="Selamat transaksi anda sukses! silahkan untuk melanjutkan pembayaran mu di kasir! ^,^"
        android:textStyle="bold"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="Survey Toko Kami !" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saya sangat puas dengan pelayanan kami" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saya tidak puas dengan pelayanan kami" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="290dp"
        android:layout_marginBottom="20dp"
        tools:layout_editor_absoluteY="550dp" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="550dp" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="15dp"
        android:gravity="bottom|center"
        android:text="Copyright Rahmattaullah Ariyansyah"
        android:textSize="20dp"
        android:textStyle="bold" />

</LinearLayout>